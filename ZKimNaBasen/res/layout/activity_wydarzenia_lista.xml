<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tv_moje_wydarzenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_moje_wydarzenia"
        android:textSize="@dimen/naglowki" />

    <ListView
        android:id="@+id/lv_prostalista"
        android:layout_width="match_parent"
        android:layout_height="400dp" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--   style="?android:attr/buttonStyleSmall" -->
        <Button
            android:id="@+id/btn_nowe_wydarzenie"
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_nowe_wydarzenie" />

        <Button
            android:id="@+id/btn_wyswietlanie"
            style="@style/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btn_wyswietlanie" />
    </LinearLayout>

</LinearLayout>