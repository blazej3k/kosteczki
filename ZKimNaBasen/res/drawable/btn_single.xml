<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/bardzo_szary"
                android:startColor="@color/malo_szary"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/czarny" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <solid
                android:color="@color/bialy"/>
            <stroke
                android:width="1dp"
                android:color="@color/bardzo_szary" />
 
            <corners
                android:radius="5dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

